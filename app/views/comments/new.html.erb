<div class="comment-form-container">
  <h2 class="comment-form-title">Add a New Comment</h2>

  <%= form_with(model: [@post, Comment.new], url: user_post_comments_path(@post.author, @post), class: "comment-form") do |form| %>
    <div class="form-group">
      <%= form.label :text, "Comment:", class: "form-label" %>
      <%= form.text_area :text, rows: 4, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "Create Comment", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
