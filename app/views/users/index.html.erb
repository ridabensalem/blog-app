<!-- Add login and sign-up buttons here -->
<div class="user_buttons">
 <%= link_to "Login", new_user_session_path %>
<%= link_to "Sign Up", new_user_registration_path %>
</div>

<div class='user_wrapper'>
  <% @users.each do |user| %>
    <div class="user_container">
      <div class="image_container", style="width: 15rem; height: 15rem;">
        <% if user.photo %>
          <img src="<%= user.photo %>" class="">
        <% else %>
          <p> No image found </p>
        <% end %>
      </div>
      <div class="content_container">
        <h1 class="">User Name: <%= user.name %></h1>
        <h6 class="">Number of posts: <span><%= user.posts_counter %></span></h6>
        <%= link_to "See details", user_path(user), class: "btn-details" %>
      </div>
    </div>
  <% end %>
</div>
