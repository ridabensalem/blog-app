<div class="user_posts_details">
  <h2>Post</h2>
  <div class='posts_list'>
    <h3>Title: <%= @post.title %></h3>
    <%= @post.text %>
  </div>

  <div class='posts_list'>
    <p>Comments: <%= @post.comments.count %></p>
    <p>Likes: <%= @post.likes_counter %></p>
  </div>

  <div class='posts_list'>
    <% @post.comments.each do |comment| %>
      <div class='posts_list'>
        <h3><%= comment.author.name %>: <%= comment.text %></h3>
      </div>
      <div class="d-flex justify-content-end">
            <% if can? :destroy, comment %>
              <%= button_to "X", user_post_comment_path(comment.author, comment.post, comment), class: "btn btn-dark center text-light m-2", method: :delete, data: { turbo: false } %>
            <% end %>
            </div>
    <% end %>
  </div>
  <div class="pagination_container">
    <%= link_to 'Add a Comment', new_user_post_comment_path(@post.author, @post), class: 'btn btn-primary' %>
  </div>
</div>
